
.catogory {
		position: relative;
}
.scroll-view_H {
		white-space: nowrap;
		width: 100%;
		height: 60rpx;
		border-bottom: 1rpx solid #ccc;
}
 ::-webkit-scrollbar{
		display: none;
		width: 0;
		height: 0;
}
.scroll-view-item_H {
		display: inline-block;
		padding:0 10rpx;
		line-height: 60rpx;
		text-align: center;
		font-size: 16rpx;
}
.active{
		background-color: #e43d33;
		color: white;
}
.more {
		position: absolute;
		top: 10rpx;
		right: 0;
		background-color: #f5f5f5;
}
